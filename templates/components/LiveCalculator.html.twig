<div {{ attributes }}>
    <div class="mb-10 md:mb-20 block md:flex items-center gap-10">
        <label for="insurance-value" class="text-lg">
            Insurance value
        </label>
        <div class="mt-2">
            <div class="inline-flex items-center rounded-sm bg-white px-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-cyan-500">
                <div class="shrink-0 text-base text-gray-600 select-none sm:text-sm/6">CHF</div>
                <input
                    type="number"
                    data-model="insuranceValue"
                    id="insurance-value"
                    class="py-3 pr-0 pl-4 border-none focus:ring-0"
                    placeholder="1000000"
                >
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-10">
        <div class="bg-gray-100 p-4 sm:p-6 md:p-10">
            {{ include('components/partials/calculation.html.twig', {
                type: enum('App\\Enum\\PremiumType').CONSTRUCTION
            }) }}
        </div>

        <div class="bg-gray-100 p-4 sm:p-6 md:p-10">
            {{ include('components/partials/calculation.html.twig', {
                type: enum('App\\Enum\\PremiumType').BUILDING
            }) }}
        </div>
    </div>
</div>

